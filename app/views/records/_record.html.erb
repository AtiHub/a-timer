<div id="<%= dom_id(record) %>"class="grid grip-rows-1 grid-cols-5 gap-0 w-[360px]>">
  <div class="text-center box-border border-t border-b border-l border-gray-400"><%= record.session.records.count %></div>
  <div class="text-center box-border border-t border-b border-l border-gray-400"><%= record.display_time %></div>
  <div class="text-center box-border border-t border-b border-l border-gray-400"><%= avg5(times[0..4]) %></div>
  <div class="text-center box-border border-t border-b border-l border-gray-400"><%= avg12(times) %></div>
  <div class="text-center box-border border border-gray-400 peer overflow-x-visible">
    <%= button_to record, :method => :get do %>
      <%= fa_icon "info-circle" %>
    <% end %>
  </div>
</div>