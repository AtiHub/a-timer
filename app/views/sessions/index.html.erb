<div>
  <div>Sessions</div>

  <turbo-frame id="sessions-frame" data-dashboard-target="sessionsFrame">
    <%= turbo_stream_from(@selected_session) %>

    <% if @sessions.exists? %>
      <div id="sessions-select-container" class="flex justify-center min-w-full w-full h-[60px]">
        <select name="sessions-select" id="sessions-select" data-action="change->dashboard#goToSelectedSession" data-dashboard-target="sessionsSelect" class="mx-[20px] mb-[10px] w-[360px]">
          <% @sessions.each_with_index do |session, index| %>
            <option value="<%= session.id %>" <%= "selected" if session.id == @selected_session.id %>><%= "Session #{index}" %></option>
          <% end %>
        </select>
      </div>

      <%= render partial: 'sessions/session', locals: { records: @records, times: @times } %>
    <% else %>
      No sessions available!
    <% end %>
  </turbo-frame>
</div>
